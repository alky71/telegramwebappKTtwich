<body>
    <h1>Twitch Stream</h1>
    <iframe
        src="https://player.twitch.tv/?channel=ktwerty_13&parent=miniapp.example.com"
        allowfullscreen>
    </iframe>
    <div id="balance">Баланс: завантаження...</div>

    <script>
        const tg = window.Telegram.WebApp;
        tg.expand();  // Розгорнути на весь екран

        async function getBalance() {
            try {
                const response = await fetch(`https://api.telegram.org/bot7765251171:AAEL8FHmmQLRF0uU80lLFuwAaarFkrSTAqU/sendMessage`, {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({
                        chat_id: tg.initDataUnsafe.user.id,
                        text: "/balance"
                    })
                });

                if (!response.ok) throw new Error("Помилка отримання балансу");

                document.getElementById('balance').innerText = `Баланс: ${await response.text()} балів`;
            } catch (error) {
                document.getElementById('balance').innerText = "Помилка отримання балансу";
            }
        }

        getBalance();
    </script>
</body>
